<div class="container">
    <div class="columns is-desktop">
        {{#each Item}}
        <div class="column">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src={{link}} alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">

                        <div class="media-content">
                            <p class="title is-4">{{item_name}}</p>
                            <p class="subtitle is-6">${{price}}</p>
                        </div>
                    </div>

                    <div class="content">
                        {{description}}
                        <button class="buy" data-itemid="{{id}}">Buy</button>
                        <br>

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

 <script src="./js/items.js"></script>

